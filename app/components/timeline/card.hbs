<li class="card-item">
    <a href="{{@card.webpage}}" class="card" target="_blank" rel="noopener noreferrer">

        <div class="card-header">
            {{#if @card.icon}}
                <div class="image">
                    <img src="/assets/images/companies/{{@card.icon}}/logo.svg"
                        title="{{@card.name}}" 
                        alt="{{@card.name}}" />
                </div>
            {{else}}
                <div class="company-name">
                    <h1>{{@card.name}}</h1>
                </div>
            {{/if}}
            <div class="company-position">
                <h2>{{@card.position}}</h2>
            </div>
            <div class="company-range">
                <h3>
                    {{@card.from}}
                    {{#if @card.to}}
                        - {{@card.to}}
                    {{/if}}
                </h3>
            </div>
            <div class="company-country">
                <small>{{@card.country}}</small>
            </div>
        </div>
        <div class="card-body">
            {{@card.description}}
        </div>
    </a>
</li>